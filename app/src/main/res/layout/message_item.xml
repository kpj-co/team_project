<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal">

    <TextView
        android:id="@+id/tvCurrentUserName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="left"
        android:layout_weight="1"
        android:hint="UsernameCurrent"/>

    <TextView
        android:id="@+id/tvAnotherUserName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:textAlignment="viewEnd"
        android:hint="UsernameOther"/>

    </LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ivProfileOther"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="otherUser"
        android:src="@mipmap/ic_launcher" />
    <TextView
        android:textSize="18sp"
        android:id="@+id/tvBody"
        android:padding="20dp"
        android:inputType="textMultiLine"
        android:ellipsize="end"
        android:layout_marginEnd="64dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </TextView>
    <ImageView
        android:id="@+id/ivProfileMe"
        android:contentDescription="me"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/ic_launcher" />
</LinearLayout>
</LinearLayout>